
<div class="toasts">
    {{#each toasts}}
        <toast-item on:vm:hide="removeToast(.)"
          severity="{{severity}}"
          visible="{{visible}}"
          heading="{{heading}}"
          use-content-tag="false"
          auto-hide="{{autoHide}}"
          body="{{body}}"
          dismissable="{{dismissable}}" />
    {{/each}}
</div>
